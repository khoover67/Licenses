<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        @Html.ActionLink("Updates", "Index", "Home", new { area = "Updates", auth = ViewBag.AuthCode }, new { @class = "nav-link active" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Tables", "Index", "Home", new { area = "Tables", auth = ViewBag.AuthCode }, new { @class = "nav-link" })
                    </li>
                    <!--
                    <li class="nav-item">
                        <a class="nav-link" href="#">Charts</a>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Settings", "Index", "Home", new { area = "Settings", auth = ViewBag.AuthCode }, new { @class = "nav-link" })
                    </li>
                    -->
                </ul>
            </div>
        </nav>
    </div>

    <div class="container">
        <div>
            <img src="~/Content/Images/pdi.png" />
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PDI Factor License Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery.validate")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
